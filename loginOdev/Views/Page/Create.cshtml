

@model loginOdev.Models.Pages

@{
    Layout = null;
}

<!DOCTYPE html>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        form {
            border: 3px solid #f1f1f1;
        }

        input[type=text], input[type=password] {
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        button {
            background-color: #4CAF50;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            width: 100%;
        }

            button:hover {
                opacity: 0.8;
            }

        .cancelbtn {
            width: auto;
            padding: 10px 18px;
            background-color: #f44336;
        }

        .imgcontainer {
            text-align: center;
            margin: 24px 0 12px 0;
        }

        body {
            width: 50%;
            height: 50%;
        }




        img.avatar {
            width: 40%;
            border-radius: 50%;
        }

        .container {
            padding: 16px;
        }

        .discontainer {
            width: 600px;
            height: 800px;
            margin-left: 50%;
            margin-right: 80%;
        }

        .field-validation-error {
            color: red;
            font-style: italic;
            font-size: smaller;
        }

        span.psw {
            float: right;
            padding-top: 16px;
        }

        /* Change styles for span and cancel button on extra small screens */
        @@media screen and (max-width: 300px) {
            span.psw {
                display: block;
                float: none;
            }

            .cancelbtn {
                width: 100%;
            }

            .field-validation-error {
                color: red;
            }
        }
    </style>
</head>
<body>
    <div class="discontainer">

        <h2>Page Create Form</h2>


        <div class="container">

            @using (Html.BeginForm("Create", "Page", FormMethod.Post))
            {
                @Html.LabelFor(model => model.PageTitle, new { @style = "font-weight:bold; " })
                @Html.EditorFor(model => model.PageTitle, new { @placeholder = "Enter Title" })
                @Html.ValidationMessageFor(model => model.PageTitle)
                @:<br />


                @Html.LabelFor(model => model.PageContent, new { @style = "font-weight:bold;" })
                @Html.EditorFor(model => model.PageContent, new { @placeholder = "Enter Content" })
                @Html.ValidationMessageFor(model => model.PageContent)

                @Html.LabelFor(model => model.PageUrl, new { @style = "font-weight:bold;" })
                @Html.EditorFor(model => model.PageUrl, new { @placeholder = "Enter Content" })
                @Html.ValidationMessageFor(model => model.PageUrl)

                <input type="submit" value="Create" />
                <label>
                    <input type="checkbox" checked="checked" name="remember"> Remember me
                </label>
            }
        </div>

        <div class="container" style="background-color:#f1f1f1">
            <button type="button" class="cancelbtn">Cancel</button>
            <span class="psw">Forgot <a href="#">password?</a></span>
        </div>

    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>

    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>

